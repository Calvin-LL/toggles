---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A bunch of toggles" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html,
  body {
    font-family: system-ui, sans-serif;
    background: #fff;
    color: #000;
    padding: 0;
    margin: 0;

    @media (prefers-color-scheme: dark) {
      background: #000;
      color: #fff;
    }
  }
</style>
